    @model IEnumerable<Website.CaesarGaming.Models.VideoModel>
    @{
    Layout = "_Layout";
    }
    @section Title {
    ViewData["Title"] = "Videos";
    }


    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>CaesarGaming</title>
        <!-- Googleapis Fonts: For Roboto font-family -->
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&display=swap" rel="stylesheet" />
        <!-- Font Awesome Library: For Icons in Sidebar -->
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
        <link rel="stylesheet" href="~/css/videos.css" />

    </head>
    <body>
        <!-- >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>   MAIN CONTENT -->
        <div class="container mt-5">
            <h1 class="text-left mb-5 mb-4">Videos</h1>
            <div class="row">
                @foreach (var video in Model)
                {
                <div class="col-md-4 col-sm-6 col-12 mb-4">
                    <div class="video-card shadow rounded p-3 bg-white">
                        <video class="w-100 rounded" controls>
                            <source src="@video.Url" type="video/mp4" />
                            Your browser does not support the video tag.
                        </video>
                        <h3 class="video-title mt-3">@video.Title</h3>
                        <p class="video-description text-muted">@video.Description</p>
                    </div>
                </div>
                }
            </div>
        </div>

        <!-- SCRIPT -->
        <script src="~/js/site.js"></script>

        <!-- Bootstrap or Links -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    </body>
</html>
