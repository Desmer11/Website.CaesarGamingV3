<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Website.CaesarGaming</title>

    @* Render the 'Title' section if defined *@
    @RenderSection("Title", required: false)

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
</head>

<body>
    <header>
        <!-- >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>   NAV BAR -->
        <div class="wrapper">
            <!-- Sidebar -->
            <aside id="sidebar">
                <div class="h-100">
                    <div class="sidebar-logo">
                        <a href="@Url.Action("Index", "Home" )">
                            <img src="~/media/received_2683688488373055-removebg-preview.png" alt="CaesarGaming Logo">
                        </a>
                    </div>

                    <!-- ITEMS -->
                    <ul class="sidebar-nav">
                        <li class="sidebar-header">Navigation</li>

                        <!-- Profile -->
                        <li class="sidebar-item">
                            <a href="@Url.Action( "Profile", "Account" )" class="sidebar-link">
                                <i class="fa-solid fa-list pe-2"></i>
                                Profile
                            </a>
                        </li>

                        <!-- Login -->
                        <li class="sidebar-item">
                            <a href="#" class="sidebar-link collapsed" data-bs-toggle="collapse" data-bs-target="#auth"
                               aria-expanded="false" aria-controls="auth">
                                <i class="fa-regular fa-user pe-2"></i>
                                Login
                            </a>
                            <ul id="auth" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                                <li class="sidebar-item">
                                    <a href="@Url.Action( "Login", "Account" )" class="sidebar-link">Login</a>
                                </li>
                                <li class="sidebar-item">
                                    <a href="@Url.Action( "Register", "Account" )" class="sidebar-link">Register</a>
                                </li>
                            </ul>
                        </li>

                        <!-- Games -->
                        <li class="sidebar-item">
                            <a href="@Url.Action( "Games", "Games" )" class="sidebar-link">
                                <i class="fa-regular fa-file-lines pe-2"></i>
                                Games
                            </a>
                        </li>

                        <!-- Videos -->
                        <li class="sidebar-item">
                            <a href="@Url.Action( "Videos", "Videos" )" class="sidebar-link">
                                <i class="fa-regular fa-file-lines pe-2"></i>
                                Videos
                            </a>
                        </li>

                        <!-- Music -->
                        <li class="sidebar-item">
                            <a href="@Url.Action( "Music", "Music" )" class="sidebar-link">
                                <i class="fa-regular fa-file-lines pe-2"></i>
                                Music
                            </a>
                        </li>

                        <!-- Playlist -->
                        <li class="sidebar-item">
                            <a href="@Url.Action( "Playlist", "Playlist" )" class="sidebar-link">
                                <i class="fa-regular fa-file-lines pe-2"></i>
                                Playlist
                            </a>
                        </li>

                        <!-- Contact -->
                        <li class="sidebar-item">
                            <a href="#" class="sidebar-link collapsed" data-bs-toggle="collapse" data-bs-target="#dashboard"
                               aria-expanded="false" aria-controls="dashboard">
                                <i class="fa-solid fa-sliders pe-2"></i>
                                Contact
                            </a>
                            <ul id="dashboard" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                                <li class="sidebar-item">
                                    <a href="@Url.Action( "Contact", "Home" )" class="sidebar-link">Info</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </aside>

            <!-- >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>   SIDEBAR TOGGLE -->
            <div id="main">
                <div class="content">
                    <nav class="navbar navbar-expand px-3 border-bottom">
                        <!-- Button for sidebar toggle -->
                        <button class="btn" type="button" data-bs-theme="dark">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <br />
                        <p class="mt-3 me-3">Toggle Sidebar</p>
                    </nav>
                    <br>
                    <br>

                    <!--´>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>> MAIN CONTENT RENDERED -->
                    <div class="container">
                        <main role="main" class="mainContent pb-3">
                            @RenderBody()
                        </main>
                    </div>
                </div>
            </div>

    </header>





    <!-- >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>   FOOTER -->
    <footer id="footer">
        <div class="footer-content">
            <div class="footer-links">
                <a href="@Url.Action("Index", "Home" )">Home</a>
                <a href="@Url.Action("Info", "Home" )">Info</a>
                <a href="@Url.Action("Tables", "Home" )">Tables</a>
            </div>
            <div class="social-icons">
                <p id="contact-txt">Contact</p>
                <a href="https://facebook.com/yourpage"><img src="~/media/facebook-logo-white.png" alt="Facebook"></a>
                <a href="https://twitter.com/yourpage"><img src="~/media/X_logo_2023_(white).png" alt="Twitter"></a>
                <a href="https://instagram.com/yourpage"><img src="~/media/2227.jpg" alt="Instagram"></a>
                <a href="https://linkedin.com/yourpage"><img src="~/media/linkedin-icon-1024x1024-k39l5ziu.png" alt="LinkedIn"></a>
            </div>
            <p id="copyright">© 2025 CaesarGaming. All rights reserved.</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/layout.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
