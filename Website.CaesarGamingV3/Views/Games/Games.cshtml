@{
    Layout = "_Layout";
}
@section Title {
    ViewData["Title"] = "Games";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CaesarGaming</title>
    <!-- Googleapis Fonts: For Roboto font-family -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&display=swap" rel="stylesheet" />
    <!-- Font Awesome Library: For Icons in Sidebar -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/games.css" />
</head>
<body>

    <div class="wrapper">
        <!-- >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>   MAIN CONTENT -->
        <!-- Container for Games -->
        <div class="container mt-5">
            <h1 class="text-left mb-5 mb-4">Games</h1>
            <div class="row">

                <!-- Game 1 -->
                <div class="col-md-4 mb-4">
                    <div class="game-card">
                        <img src="~/media/game1.jpg" alt="Game 1" class="img-fluid">
                        <h3 class="game-title">Game 1</h3>
                        <p class="game-description">Description for Game 1. Enjoy playing!</p>
                        <a href="@Url.Action(" Details", "Games" , new { id=1 })" class="btn btn-primary">Play Now</a>
                    </div>
                </div>

                <!-- Game 2 -->
                <div class="col-md-4 mb-4">
                    <div class="game-card">
                        <img src="~/media/game2.jpg" alt="Game 2" class="img-fluid">
                        <h3 class="game-title">Game 2</h3>
                        <p class="game-description">Description for Game 2. Enjoy playing!</p>
                        <a href="@Url.Action(" Details", "Games" , new { id=2 })" class="btn btn-primary">Play Now</a>
                    </div>
                </div>

                <!-- Game 3 -->
                <div class="col-md-4 mb-4">
                    <div class="game-card">
                        <img src="~/media/game3.jpg" alt="Game 3" class="img-fluid">
                        <h3 class="game-title">Game 3</h3>
                        <p class="game-description">Description for Game 3. Enjoy playing!</p>
                        <a href="@Url.Action(" Details", "Games" , new { id=3 })" class="btn btn-primary">Play Now</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- SCRIPT -->
        <script src="~/js/site.js"></script>

        <!-- Bootstrap or Links -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
